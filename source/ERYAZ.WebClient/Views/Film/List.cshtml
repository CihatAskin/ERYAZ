@model LogOnModel
@{
    ViewData["Title"] = "Giriş";
    Layout = "_Layout";
}
<form>
<div class="py-3">
    <label class="control-label" for="t">Adı:</label>
    <input required type="text" id="t" name="t" class="input-small">

    <label class="control-label" for="y">Yılı:</label>
    <input type="number" id="y" value="2022" name="y" class="input-small" max="2022" min="1900" style="width: 100px;">

    <label class="control-label">Tipi:</label>
    <select id="kind" name="type" style="width: 100px;">
        <option value="movie" selected="">Film</option>
        <option value="series">Dizi</option>
        <option value="episode">Bölüm</option>
    </select>

    <button id="search" type="button" class="btn-sm btn-primary">Search</button>
    <button id="reset" type="reset" class="btn-sm">Reset</button>
</div>
    <span id="error" class="text-danger"></span>
</form>

<table class="table table-bordered table-striped table-hover py-2">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Yılı</th>
            <th>Tipi</th>
            <th>Afiş</th>
        </tr>
    </thead>
    <tbody id="body">
    </tbody>
</table>

<script src="~/js/search.js" asp-append-version="true"></script>